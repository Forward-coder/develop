<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel.manage.mapper.GuestMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.hotel.manage.entity.Guest">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="id_type_id" property="idTypeId"/>
        <result column="id_no" property="idNo"/>
        <result column="phone" property="phone"/>
        <result column="remark" property="remark"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 查询字段 -->
    <sql id="Base_Column_List">
        id, name, id_type_id, id_no, phone, remark, created_at, updated_at
    </sql>

    <!-- 获取客人列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM guest
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="phone != null and phone != ''">
            AND phone LIKE CONCAT('%', #{phone}, '%')
        </if>
        <if test="idNo != null and idNo != ''">
            AND id_no LIKE CONCAT('%', #{idNo}, '%')
        </if>
        ORDER BY created_at DESC
    </select>

    <!-- 根据ID获取客人信息 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM guest
        WHERE id = #{id}
    </select>

    <!-- 根据手机号查找客人 -->
    <select id="selectByPhone" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM guest
        WHERE phone = #{phone}
    </select>

    <!-- 根据证件号查找客人 -->
    <select id="selectByIdNo" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM guest
        WHERE id_no = #{idNo}
    </select>

    <!-- 检查手机号是否存在 -->
    <select id="existsByPhone" resultType="int">
        SELECT COUNT(*) FROM guest
        WHERE phone = #{phone}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 检查证件号是否存在 -->
    <select id="existsByIdNo" resultType="int">
        SELECT COUNT(*) FROM guest
        WHERE id_no = #{idNo}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <!-- 插入客人信息 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO guest (
            name, id_type_id, id_no, phone, remark, created_at, updated_at
        ) VALUES (
            #{name}, #{idTypeId}, #{idNo}, #{phone}, #{remark}, NOW(), NOW()
        )
    </insert>

    <!-- 更新客人信息 -->
    <update id="update">
        UPDATE guest
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="idTypeId != null">id_type_id = #{idTypeId},</if>
            <if test="idNo != null and idNo != ''">id_no = #{idNo},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="remark != null">remark = #{remark},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除客人信息 -->
    <delete id="deleteById">
        DELETE FROM guest WHERE id = #{id}
    </delete>

</mapper>